<div id="app">
    <h1>The tractor store</h1>


    @if (_loaded)
    {
        <div id="image">
            <div>
                <img src="/assets/img/@_selectedTractor.Image" />
            </div>
        </div>

        <h3 id="name">@_selectedTractor.Name</h3>
        <div id="options">
            @foreach (var tractor in _tractors)
            {
                var cssClass = tractor == _selectedTractor ? "active" : "";

                <button @onclick="_ => tractorClicked(tractor)" class="@cssClass">
                    <img src="/assets/img/@tractor.Image" />
                </button>
            }
        </div>

        <Related.Recos TractorId="_selectedTractor?.Id" />
    }
</div>
